{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/*.env"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test:unit": {
      "dependsOn": ["^test:unit"],
      "cache": false,
      "persistent": true
    },
    "test:e2e": {
      "dependsOn": ["^test:e2e"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
